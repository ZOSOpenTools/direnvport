# bump: direnv-version /DIRENV_VERSION="(.*)"/ https://github.com/direnv/direnv.git|semver:*
DIRENV_VERSION="2.32.3"

export ZOPEN_BUILD_LINE="STABLE"
export ZOPEN_DEV_URL="https://github.com/direnv/direnv.git"
export ZOPEN_DEV_DEPS="comp_go make coreutils"
export ZOPEN_STABLE_URL="https://github.com/direnv/direnv/archive/refs/tags/v${DIRENV_VERSION}.tar.gz"
export ZOPEN_STABLE_DEPS="comp_go make coreutils gzip tar"
export ZOPEN_RUNTIME_DEPS="bash"

export ZOPEN_CONFIGURE="skip"
export ZOPEN_MAKE_MINIMAL="yes"
export ZOPEN_COMP=CLANG
export ZOPEN_CHECK_OPTS="-i test"
export ZOPEN_INSTALL="zopen_install"

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to gauge build health
  echo "actualFailures:0"
  echo "totalTests:1"
  echo "expectedFailures:0"
}

zopen_install()
{
  go install
}

zopen_append_to_env()
{
  # echo envars outside of PATH, MANPATH, LIBPATH
}

zopen_append_to_setup()
{
}

zopen_get_version()
{
  $ZOPEN_INSTALL_DIR/bin/direnv --version
}
