export ZOPEN_GIT_URL="https://github.com/direnv/direnv.git"
export ZOPEN_GIT_DEPS="comp_go make coreutils"
export ZOPEN_TYPE="GIT"
export ZOPEN_RUNTIME_DEPS="bash"

export ZOPEN_CONFIGURE="skip"
export ZOPEN_MAKE_MINIMAL="yes"
export ZOPEN_COMP=CLANG
export ZOPEN_CHECK_OPTS="-i test"
export ZOPEN_INSTALL="zopen_install"

zopen_init()
{
  # Go installs binaries, so create the bin dir as well
  export GOBIN=$ZOPEN_INSTALL_DIR/bin
  mkdir -p \$ZOPEN_INSTALL_DIR/bin
}

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to gauge build health
  echo "actualFailures:0"
  echo "totalTests:1"
  echo "expectedFailures:0"
}

zopen_install()
{
  go install
}

zopen_append_to_env()
{
  # echo envars outside of PATH, MANPATH, LIBPATH
}

zopen_append_to_setup()
{
}

zopen_get_version()
{
  $ZOPEN_INSTALL_DIR/bin/direnv --version
}
